<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.xj_service.oa.mapper.ConsumableInOutRecordMapper">
    <!-- 如需自定义SQL可在此添加 -->
    <select id="selectByOperationType" resultType="org.xj_service.oa.entity.ConsumableInOutRecord">
        SELECT * FROM oa_consumable_in_out_record WHERE operation_type = #{type}
    </select>

    <select id="selectRecordList"
            resultType="org.xj_service.oa.entity.ConsumableInOutRecord">
        SELECT *
        FROM oa_consumable_in_out_record
        <where>
            <if test="operationType != null and operationType != ''">
                AND operation_type = #{operationType}
            </if>
            <if test="supplier != null and supplier != ''">
                AND supplier LIKE CONCAT('%', #{supplier}, '%')
            </if>
            <if test="startTime != null">
                AND operation_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND operation_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY operation_time DESC
    </select>
</mapper>